                            <field name="fecha_estimada" attrs="{'invisible':[('user_id', '=', False)], 'readonly':[('cancelar','=', True)]}"/>
                            <field name="close_time" attrs="{'invisible' :[('close_time', '=', False)]}" readonly="1"/>                      
                            <field name="time_to_close_est" readonly="1"/>
