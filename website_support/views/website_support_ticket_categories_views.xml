<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>        
      <record id="website_support_ticket_categories_view_form" model="ir.ui.view">
        <field name="name">website.support.ticket.categories.form.view</field>
        <field name="model">website.support.ticket.categories</field>
        <field name="arch" type="xml">
          <form>
            <sheet>
              <div>
                <field name="imagen" widget="image" class="oe_avatar"/>
                <div class="oe_title">
                  <p>Area<h2><field name="name" placeholder="Nombre de Area"/></h2></p>
                </div>
              </div>
              <group>
                <group>
                  <field name="cat_user_ids" widget="many2many_tags"/>
                </group>
                <group>
                  <field name="encargados_ids" widget="many2many_tags"/>
                </group>
              </group>
              <group>
                <field name="equipos_ids"/>
              </group>
            </sheet>
          </form>
        </field>
      </record>

      <record id="website_support_ticket_categories_view_tree" model="ir.ui.view">
          <field name="name">website.support.ticket.categories.tree.view</field>
          <field name="model">website.support.ticket.categories</field>
          <field name="arch" type="xml">
      	      <tree>
                  <field name="sequence" widget="handle"/>
      	          <field name="name"/>
      	      </tree>
      	  </field>
      </record>

      <record id="website_support_ticket_categories_action" model="ir.actions.act_window">
          <field name="name">Areas</field>
      	  <field name="res_model">website.support.ticket.categories</field>
      	  <field name="view_type">form</field>
      	  <field name="view_mode">kanban,tree,form</field>
      	  <field name="help" type="html">
	      <p class="oe_view_nocontent_create">Crear nueva Granja</p>
	  </field>
      </record>

      <record id="sequence_supp_category_seq" model="ir.sequence">
          <field name="name">website.support.ticket.categories sequence</field>
          <field name="code">website.support.ticket.categories</field>
          <field eval="1" name="number_next"/>
          <field eval="1" name="number_increment"/>
      </record>

      <record id="website_support_ticket_categories_view_kandan" model="ir.ui.view">
            <field name="name">website.support.ticket.categories.kanban.view</field>
            <field name="model">website.support.ticket.categories</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('website.support.ticket.categories', 'imagen', record.id.value)"/>
                                </div>
                                <div>
                                  <h3><field name="name"/></h3>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>